{
  "servers": {
    "mapi": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "MAYHEM_TOKEN",
        "ghcr.io/forallsecure/mcp-server-mapi:latest",
        "uv",
        "run",
        "mcp-server-mapi",
        "mcp"
      ],
      "env": {
        "MAYHEM_TOKEN": "${input:mayhem_token}"
      },
      "type": "stdio"
    }
  },
  "inputs": [
    {
      "id": "mayhem_token",
      "type": "promptString",
      "description": "MAYHEM_TOKEN (Mayhem API key)"
    }
  ]
}
